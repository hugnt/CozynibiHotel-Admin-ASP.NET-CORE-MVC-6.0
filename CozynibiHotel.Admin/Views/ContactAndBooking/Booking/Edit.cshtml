 @{
	ViewData["Title"] = "Edit Booking";

	var boxSuccess = new BoxModalViewModel()
			{
				Title = "Updated successfully",
				Text = "Continue to add a new one or go to the list",
				LstButton = new List<Button>()
		{
			new Button("Go to list", "btn-primary", "window.location.href='/Admin/ContactAndBooking/Booking';"),
			new Button("Resfesh", "btn-primary", "window.location.reload();"),
		}

			};
}


<style>

</style>
<!-- BEGIN: Content -->
@await Component.InvokeAsync("Loading")
<div class="content main-content" style="display:none;">
	<div class="intro-y flex items-center mt-8">
		<h2 class="text-lg font-medium mr-auto">
			Edit Booking
		</h2>
	</div>
	<div class="grid grid-cols-11 gap-x-6 mt-5 pb-20">
		<div class="intro-y col-span-11 2xl:col-span-9 validate-form">
			<!-- BEGIN: Status Product -->
			<div class="intro-y box p-5">
				<div class="border border-slate-200/60 dark:border-darkmode-400 rounded-md p-5">
					<div class="font-medium text-base flex items-center border-b border-slate-200/60 dark:border-darkmode-400 pb-5">
						<i data-lucide="chevron-down" class="w-4 h-4 mr-2"></i> Checkin Status
					</div>
					<div class="mt-5">
						<div class="form-check form-switch w-full sm:w-auto sm:ml-auto sm:mt-0">
							<label class="form-check-label ml-0" for="status-confirm">Confirm Status (Waiting / Confirmed)</label>
							<input id="status-confirm" class="show-code form-check-input mr-0 ml-3" type="checkbox">
						</div>
						<div class="mt-5">
							<div class="flex" style="align-items:center">
								<span>CHECK IN CODE </span>
								<div class="flex ml-5" style="width:50%">
									<input type="text" id="checkInCode" class="mr-3 rounded" disabled/>
									<button type="button" class="btn btn-primary btn-getNewCode" disabled>Get new code</button>
								</div>
							</div>
						</div>
						<div class="form-check form-switch w-full sm:w-auto sm:ml-auto mt-5">
							<label class="form-check-label ml-0" for="status-takeRoom">Take room Status (NO / YES)</label>
							<input id="status-takeRoom" class="show-code form-check-input mr-0 ml-3" type="checkbox">
						</div>

					</div>
				</div>
			</div>
			<!-- END: Status Product -->
			<!-- BEGIN: Product Information -->
			<div class="intro-y box p-5 mt-5" id="section2">
				<div class="border border-slate-200/60 dark:border-darkmode-400 rounded-md p-5">
					<div class="font-medium text-base flex items-center border-b border-slate-200/60 dark:border-darkmode-400 pb-5">
						<i data-lucide="chevron-down" class="w-4 h-4 mr-2"></i> Booking Information
					</div>
					<div class="mt-5">
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Booking Full Name</div>
										<div class="ml-2 px-2 py-0.5 bg-slate-200 text-slate-600 dark:bg-darkmode-300 dark:text-slate-400 text-xs rounded-md">
											Required
										</div>
									</div>
									<div class="leading-relaxed text-slate-500 text-xs mt-3">
										Include min.
										5 characters to make it more attractive and easy for buyers to
										find, consisting of category type, brand, and information such as
										color, material, or type.
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="record-name" type="text" class="form-control"
									   placeholder="Booking name" minlength="5" required>
								<div class="form-help text-right">Maximum character 50</div>
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Phone Number</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="phoneNumber" type="text" class="form-control"
									   placeholder="Phone Number">
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Email</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="email" type="email" class="form-control"
									   placeholder="Email">
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Address</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="address" type="text" class="form-control"
									   placeholder="Address">
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Number in age</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1">
								<div class="sm:grid grid-cols-2 gap-2">
									<div class="input-form">
										<div class="input-group">
											<input id="adults" type="number" class="form-control" placeholder="Adults">
											<div class="input-group-text">Adults</div>
										</div>
									</div>
									<div class="input-form">
										<div class="input-group mt-2 sm:mt-0">
											<input id="children" type="number" class="form-control" placeholder="Children">
											<div class="input-group-text">Children</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Check in and Check out time</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1">
								<div class="sm:grid grid-cols-2 gap-2">
									<div class="input-form">
										<div class="input-group">
											<input id="checkIn" type="datetime-local" class="form-control">
											<div class="input-group-text">Checkin</div>
										</div>
									</div>
									<div class="input-form">
										<div class="input-group mt-2 sm:mt-0">
											<input id="checkOut" type="datetime-local" class="form-control">
											<div class="input-group-text">Checkout</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Booking Content</div>
									</div>
									<div class="leading-relaxed text-slate-500 text-xs mt-3">
										<div>
											Make sure the booking description provides a detailed
											explanation of your booking so that it is easy to understand and
											find your category.
										</div>
										<div class="mt-2">
											It is recommended not to enter info on mobile
											numbers, e-mails, etc. into the category description to protect
											your personal data.
										</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1">
								<div id="editor">
									<p></p>
								</div>
								<div class="form-help text-right">Maximum character 0/2000</div>
							</div>
						</div>

					</div>
				</div>
			</div>
			<!-- END: Product Information -->
			<div class="flex justify-end flex-col md:flex-row gap-2 mt-5">
				<button type="button" onclick = "window.location.href='/Admin/ContactAndBooking/Booking';"
						class="btn py-3 border-slate-300 dark:border-darkmode-400 text-slate-500 w-full md:w-52">

					Cancel

				</button>
				<button type="button" onclick ="window.location.reload()"
						class="btn py-3 border-slate-300 dark:border-darkmode-400 text-slate-500 w-full md:w-52">

					Reset

				</button>
				<button type="button" class="btn py-3 btn-primary w-full md:w-52 btn-update">Save & Update Booking</button>
			</div>
		</div>
		<div class="intro-y col-span-2 hidden 2xl:block">
			<div class="pt-10 sticky top-0">
				<ul class="text-slate-500 relative before:content-[''] before:w-[2px] before:bg-slate-200 before:dark:bg-darkmode-600 before:h-full before:absolute before:left-0 before:z-[-1]">
					<li class="mb-4 border-l-2 pl-5 border-transparent dark:border-transparent section-preview">
						<a href="#section2">Booking Information</a>
					</li>
				</ul>
				<div class="mt-10 bg-warning/20 dark:bg-darkmode-600 border border-warning dark:border-0 rounded-md relative p-5">
					<i data-lucide="lightbulb"
					   class="w-12 h-12 text-warning/80 absolute top-0 right-0 mt-5 mr-3"></i>
					<h2 class="text-lg font-medium">
						Tips
					</h2>
					<div class="mt-5 font-medium">Booking</div>
					<div class="leading-relaxed text-xs mt-2 text-slate-600 dark:text-slate-500">
						<div>

							The image format is .jpg .jpeg .png and a minimum size of 300 x 300 pixels (For
							optimal images use a minimum size of 700 x 700 pixels).

						</div>
						<div class="mt-2">

							Select photos or drag and drop up to 5 photos at once
							here. Include min. 3 attractive photos to make them more attractive to
							buyers.

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="modal-confirm" class="modal" tabindex="-1" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body p-0">
					<div class="p-5 text-center">
						<div class="text-3xl mt-5 flex" style="justify-content:center;align-items:center">
							<i data-lucide="check-circle" class="w-10 h-10 text-success mr-2"></i>
							<span>Confirm booking</span>
						</div>
						<div class="text-slate-500 mt-2">Email with check in code will be send for custommer</div>
					</div>
					<div class="px-5 pb-8 grid grid-cols-12 gap-2 gap-y-3">
						<div class="col-span-12 sm:col-span-12">
							<label for="nameConfirm" class="form-label">Full Name</label>
							<input id="nameConfirm" type="text" class="form-control"
								   disabled>
						</div>
						<div class="col-span-6 sm:col-span-6">
							<label for="emailConfirm" class="form-label">Email</label>
							<input id="emailConfirm" type="text" class="form-control" disabled>
						</div>
						<div class="col-span-6 sm:col-span-6">
							<label for="phoneNumberConfirm" class="form-label">Phone Number</label>
							<input id="phoneNumberConfirm" type="text" class="form-control" disabled>
						</div>
						<div class="col-span-6 sm:col-span-6">
							<label for="checkInConfirm" class="form-label">Check In</label>
							<input id="checkInConfirm" type="datetime-local" class="form-control" disabled>
						</div>
						<div class="col-span-6 sm:col-span-6">
							<label for="checkOutConfirm" class="form-label">Check Out</label>
							<input id="checkOutConfirm" type="datetime-local" class="form-control" disabled> 
						</div>
					</div>
					<div class="px-5 pb-8 text-center">
						<button type="button" data-tw-dismiss="modal"
								class="btn btn-outline-success btn-confirm-sure w-80 mr-1">
							Confirm and send email
						</button>
						<button type="button" data-tw-dismiss="modal"
								class="btn btn-outline-secondary btn-close w-20 mr-1">
							Close
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- BEGIN: Failed Notification Content -->
	@await Component.InvokeAsync("FailedModal")
	<!-- END: Failed Notification Content -->
	<!-- BEGIN: Modal Content -->
	@await Component.InvokeAsync("WarningModal")
	<!-- END: Modal Content -->
	<!-- BEGIN: Modal Success Content -->
	@await Component.InvokeAsync("SuccessModal", boxSuccess)
	<!-- END: Modal Success Content -->
</div>

<!-- END: Content -->
@section Scripts{
<script>
	$('.side-contact').addClass("side-menu--active");
	$('.side-booking').addClass("side-menu--active");;
	$('.side-contact-wrapper').addClass("side-menu__sub-open");
	$('.side-booking-wrapper').addClass("side-menu__sub-open");
</script>
<script src="https://cdn.ckeditor.com/ckeditor5/38.1.0/classic/ckeditor.js"></script>
<script src="~/js/booking/booking-edit.js" type="module"></script>

}
