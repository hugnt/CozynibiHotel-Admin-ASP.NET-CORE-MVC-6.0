 @{
	ViewData["Title"] = "Add FoodOrder";

	var boxSuccess = new BoxModalViewModel()
			{
				Title = "Added successfully",
				Text = "Continue to add a new one or go to the list",
				LstButton = new List<Button>()
		{
			new Button("Go to list", "btn-primary", "window.location.href='/Admin/Menu/FoodOrder';"),
			new Button("Add new", "btn-primary", "window.location.reload();"),
		}

			};
}


<style>
	#equipment-select-ts-control {
		min-height: 2.4rem !important;
	}

</style>
<!-- BEGIN: Content -->
@await Component.InvokeAsync("Loading")
<div class="content main-content" style="display:none;">
	<div class="intro-y flex items-center mt-8">
		<h2 class="text-lg font-medium mr-auto">
			Add FoodOrder
		</h2>
	</div>
	<div class="grid grid-cols-11 gap-x-6 mt-5 pb-20">
		<div class="intro-y col-span-11 2xl:col-span-9 validate-form">
			<!-- BEGIN: Product Information -->
			<div class="intro-y box p-5 mt-5" id="section2">
				<div class="border border-slate-200/60 dark:border-darkmode-400 rounded-md p-5">
					<div class="font-medium text-base flex items-center border-b border-slate-200/60 dark:border-darkmode-400 pb-5">
						<i data-lucide="chevron-down" class="w-4 h-4 mr-2"></i> FoodOrder Information
					</div>
					<div class="mt-5">
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Custommer Full Name</div>
										<div class="ml-2 px-2 py-0.5 bg-slate-200 text-slate-600 dark:bg-darkmode-300 dark:text-slate-400 text-xs rounded-md">
											Required
										</div>
									</div>
									<div class="leading-relaxed text-slate-500 text-xs mt-3">
										Include min.
										5 characters to make it more attractive and easy for buyers to
										find, consisting of category type, brand, and information such as
										color, material, or type.
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="record-name" type="text" class="form-control"
									   placeholder="FoodOrder name" minlength="5" required>
								<div class="form-help text-right">Maximum character 50</div>
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Phone Number</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="phoneNumber" type="text" class="form-control"
									   placeholder="Phone Number">
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Checkin code</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="checkInCode" type="text" class="form-control"
									   placeholder="Checkin code">
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Place</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="place" type="text" class="form-control"
									   placeholder="Place">
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Eating Time</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 input-form">
								<input id="eatingAt" type="time" class="form-control"
									   placeholder="Time">
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">Foods List</div>
										<div class="ml-2 px-2 py-0.5 bg-slate-200 text-slate-600 dark:bg-darkmode-300 dark:text-slate-400 text-xs rounded-md">
											Required
										</div>
									</div>
									<div class="leading-relaxed text-slate-500 text-xs mt-3">
										Select the food in the food category then type the number of food then the price for each food will automatic appear
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1 addFood-wrapper">
								<div class="text-right">
									<button class="btn btn-sm btn-primary w-24 btn-addFood">+ Add Food </button>
								</div>
								<div class="sm:grid grid-cols-3 gap-2 mt-3 addFood-item">
									<div class="input-form">
										<div class="input-group">
											<select class="foodList-select w-full form-select box foodList" id="" style="border-color:rgb(226, 232, 240)">
											</select>
										</div>
									</div>

									<div class="input-form">
										<div class="input-group mt-2 sm:mt-0">
											<input id="" type="number" class="form-control number" placeholder="Number" minlength="1" required>
											<div class="input-group-text">Portion</div>
										</div>
									</div>

									<div class="input-form">
										<div class="input-group mt-2 sm:mt-0">
											<input id="" type="text" class="form-control price" placeholder="Price" disabled>
											<div class="input-group-text">$</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1">
								<div class="sm:grid grid-cols-3 gap-2 mt-3">
									<div class="input-form">
										<div class="input-group">
											
										</div>
									</div>

									<div class="input-form">
					
									</div>

									<div class="input-form">
										<div class="input-group mt-2 sm:mt-0">
											<div class="input-group-text">Total</div>
											<input id="totalPrice" type="text" class="form-control price" placeholder="Total Price" disabled>
											<div class="input-group-text">$</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="form-inline items-start flex-col xl:flex-row mt-5 pt-5 first:mt-0 first:pt-0">
							<div class="form-label xl:w-64 xl:!mr-10">
								<div class="text-left">
									<div class="flex items-center">
										<div class="font-medium">FoodOrder Notes</div>
									</div>
									<div class="leading-relaxed text-slate-500 text-xs mt-3">
										<div>
											Make sure the foodOrder description provides a detailed
											explanation of your foodOrder so that it is easy to understand and
											find your category.
										</div>
										<div class="mt-2">
											It is recommended not to enter info on mobile
											numbers, e-mails, etc. into the category description to protect
											your personal data.
										</div>
									</div>
								</div>
							</div>
							<div class="w-full mt-3 xl:mt-0 flex-1">
								<div id="editor">
									<p></p>
								</div>
								<div class="form-help text-right">Maximum character 0/2000</div>
							</div>
						</div>

					</div>
				</div>
			</div>
			<!-- END: Product Information -->
			<div class="flex justify-end flex-col md:flex-row gap-2 mt-5">
				<button type="button" onclick="window.location.href='/Admin/FoodOrder';"
						class="btn py-3 border-slate-300 dark:border-darkmode-400 text-slate-500 w-full md:w-52">

					Cancel

				</button>
				<button type="button" onclick="window.location.reload()"
						class="btn py-3 border-slate-300 dark:border-darkmode-400 text-slate-500 w-full md:w-52">

					Reset

				</button>
				<button type="button" class="btn py-3 btn-primary w-full md:w-52 btn-addnew">Save & Add New FoodOrder</button>
			</div>
		</div>
		<div class="intro-y col-span-2 hidden 2xl:block">
			<div class="pt-10 sticky top-0">
				<ul class="text-slate-500 relative before:content-[''] before:w-[2px] before:bg-slate-200 before:dark:bg-darkmode-600 before:h-full before:absolute before:left-0 before:z-[-1]">
					<li class="mb-4 border-l-2 pl-5 border-primary dark:border-primary text-primary font-medium section-preview">
						<a href="#section1">Upload FoodOrder Images</a>
					</li>
					<li class="mb-4 border-l-2 pl-5 border-transparent dark:border-transparent section-preview">
						<a href="#section2">FoodOrder Information</a>
					</li>
				</ul>
				<div class="mt-10 bg-warning/20 dark:bg-darkmode-600 border border-warning dark:border-0 rounded-md relative p-5">
					<i data-lucide="lightbulb"
					   class="w-12 h-12 text-warning/80 absolute top-0 right-0 mt-5 mr-3"></i>
					<h2 class="text-lg font-medium">
						Tips
					</h2>
					<div class="mt-5 font-medium">FoodOrder</div>
					<div class="leading-relaxed text-xs mt-2 text-slate-600 dark:text-slate-500">
						<div>

							The image format is .jpg .jpeg .png and a minimum size of 300 x 300 pixels (For
							optimal images use a minimum size of 700 x 700 pixels).

						</div>
						<div class="mt-2">

							Select photos or drag and drop up to 5 photos at once
							here. Include min. 3 attractive photos to make them more attractive to
							buyers.

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- BEGIN: Failed Notification Content -->
	@await Component.InvokeAsync("FailedModal")
	<!-- END: Failed Notification Content -->
	<!-- BEGIN: Modal Content -->
	@await Component.InvokeAsync("WarningModal")
	<!-- END: Modal Content -->
	<!-- BEGIN: Modal Success Content -->
	@await Component.InvokeAsync("SuccessModal", boxSuccess)
	<!-- END: Modal Success Content -->
</div>

<!-- END: Content -->
@section Scripts{
<script>
	$('.side-MENU').addClass("side-menu--active");
	$('.side-foodOrder').addClass("side-menu--active");
	$('.side-foodOrder-add').addClass("side-menu--active");
	$('.side-MENU-wrapper').addClass("side-menu__sub-open");
	$('.side-foodOrder-wrapper').addClass("side-menu__sub-open");
</script>
<script src="https://cdn.ckeditor.com/ckeditor5/38.1.0/classic/ckeditor.js"></script>
<script src="~/js/foodOrder/foodOrder-addNew.js" type="module"></script>

}
