@model BoxModalViewModel

<!-- BEGIN: Modal Content -->
 <div id="success-modal-preview" class="modal" tabindex="-1" aria-hidden="true">
     <div class="modal-dialog">
         <div class="modal-content">
             <div class="modal-body p-0">
                 <div class="p-5 text-center"> <i data-lucide="check-circle" class="w-16 h-16 text-success mx-auto mt-3"></i>
                     <div class="text-3xl mt-5">@Model.Title</div>
                     <div class="text-slate-500 mt-2">@Model.Text</div>
                 </div>
                 <div class="px-5 pb-8 text-center"> 
                     @{
                         foreach (var btn in @Model.LstButton)
                         {
                             <button onclick="@btn.Click"
                             type="button" class="btn @btn.Color w-24 mr-2">@btn.Content</button> 
                         }
                     }
                     
                  </div>
             </div>
         </div>
     </div>
 </div> <!-- END: Modal Content -->